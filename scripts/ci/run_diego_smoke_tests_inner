#!/bin/bash

set -e -x -u

smoke_tests_stub=${PWD}/${SMOKE_TESTS_STUB}
director_stub=${PWD}/${DIRECTOR_STUB}

eval $(./scripts/ci/bosh_config)
./scripts/ci/bosh_setup

spiff merge templates/smoke-tests-aws.yml ${smoke_tests_stub} ${director_stub} > smoke-tests-aws.yml
bosh deployment smoke-tests-aws.yml
bosh -n deploy
bosh run errand diego_smoke_tests
