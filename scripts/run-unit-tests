#!/bin/bash

set -e

scripts_path=./$(dirname $0)
eval $($scripts_path/get_paths.sh)

if [ -n "$PACKAGE" ]; then
  ginkgo -r -p "$@" "./src/${PACKAGE}"
else
  pushd $DIEGO_RELEASE_DIR/src/github.com/cloudfoundry/gunk/diegonats/
    ginkgo -r -keepGoing -p -trace -randomizeAllSpecs -progress
  popd

  pushd $DIEGO_RELEASE_DIR/src/github.com/cloudfoundry-incubator/
    ginkgo -r -keepGoing -p -trace -randomizeAllSpecs -progress \
      -skipPackage="bbs/measurements,simulation,inigo,fezzik,./garden,garden-linux,dropsonde,candiedyaml,diego-smoke-tests,diego-acceptance-tests,diegocanaryapp,cf-test-helpers,vizzini,veritas" "$@"
  popd
fi
