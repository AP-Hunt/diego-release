#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/garden
LOG_DIR=/var/vcap/sys/log/garden
PIDFILE=$RUN_DIR/garden.pid
DATA_DIR=/var/vcap/data/garden

source /var/vcap/packages/pid_utils/pid_utils.sh

export DROPSONDE_ORIGIN='garden'

case $1 in

  start)
    pid_guard $PIDFILE "Garden"

    mkdir -p $RUN_DIR
    mkdir -p $DATA_DIR
    mkdir -p $LOG_DIR

    <% if p("diego.garden.kernel_network_tuning_enabled") == true %>
    # Use default local port range (higher ports are used for pooling)
    echo 32768 61000 > /proc/sys/net/ipv4/ip_local_port_range
    <% end %>

    depot=$DATA_DIR/depot

    mkdir -p $DATA_DIR/depot

    echo $$ > /var/vcap/sys/run/garden/garden.pid

    export PATH=/var/vcap/packages/shadow/sbin:$PATH
    export PATH=/var/vcap/packages/iptables/sbin:$PATH

    exec /var/vcap/packages/garden-linux/bin/garden-linux \
      -disableQuotas=<%= !p("diego.garden.disk_quota_enabled") %> \
      -listenNetwork=<%= p("diego.garden.listen_network") %> \
      -listenAddr=<%= p("diego.garden.listen_address") %> \
      -denyNetworks=<%= p("diego.garden.deny_networks").join(",") %> \
      -allowNetworks=<%= p("diego.garden.allow_networks").join(",") %> \
      -debugAddr=<%= p("diego.garden.debug_addr") %> \
      -bin=/var/vcap/packages/garden-linux/garden-bin \
      -depot=/var/vcap/data/garden/depot \
      -rootfs=/var/vcap/packages/rootfs_lucid64 \
      -overlays=/var/vcap/data/garden/overlays \
      -graph=/var/vcap/data/garden/graph \
      -containerGraceTime=5m \
      1>>$LOG_DIR/garden.stdout.log \
      2>>$LOG_DIR/garden.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: garden_ctl {start|stop}"

    ;;

esac
