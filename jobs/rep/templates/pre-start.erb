#!/bin/bash -e

sysctl -e -w fs.inotify.max_user_watches=2147483647
sysctl -e -w fs.inotify.max_user_instances=2147483647
sysctl -e -w fs.inotify.max_queued_events=2147483647

<% if p("bpm.enabled") %>
sysctl -e -w net.ipv4.tcp_fin_timeout=10
