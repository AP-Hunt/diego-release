---
name: stager

templates:
  stager_ctl.erb: bin/stager_ctl

packages:
  - common
  - stager

properties:
  etcd.machines:
    description: "IPs pointing to the ETCD cluster"

  nats.user:
    description: "Username for server authentication."
  nats.password:
    description: "Password for server authentication."
  nats.port:
    description: "The port for the NATS server to listen on."
  nats.machines:
    description: "IP of each NATS cluster member."

  stager.compilers:
    default: "{}"
    description: "Map of compilers for different stacks in json format {'stack_name':'compiler_path'}"

  stager.metrics.port:
    description: "listening port for stager metrics endpoints"
    default: 5678

  stager.metrics.username:
    description: "basic auth username for stager metrics endpoints (leave empty for generated)"
    default: ""

  stager.metrics.password:
    description: "basic auth password for stager metrics endpoints (leave empty for generated)"
    default: ""
