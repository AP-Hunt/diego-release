#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/converger
LOG_DIR=/var/vcap/sys/log/converger
CONF_DIR=/var/vcap/jobs/converger/config
PIDFILE=$RUN_DIR/converger.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

export DROPSONDE_ORIGIN='converger'

case $1 in

  start)
    pid_guard $PIDFILE "converger"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > /var/vcap/sys/run/converger/converger.pid

    exec /var/vcap/packages/converger/bin/converger \
      -etcdCluster=<%= p("diego.converger.etcd.machines").map{|addr| "\"http://#{addr}:4001\""}.join(",")%> \
      -debugAddr=<%= p("diego.converger.debug_addr") %> \
      -convergeRepeatInterval=<%= p("diego.converger.repeat.interval") %> \
      -kickPendingTaskDuration=<%= p("diego.converger.kick.pending.task.duration") %> \
      -expireCompletedTaskDuration=<%= p("diego.converger.expire.completed.duration") %> \
      -expirePendingTaskDuration=<%= p("diego.converger.expire.pending.duration") %> \
      -kickPendingLRPStartAuctionDuration=<%= p("diego.converger.kick.lrp.pending.start.auction.duration") %> \
      -expireClaimedLRPStartAuctionDuration=<%= p("diego.converger.expire.claimed.lrp.start.auction.duration") %> \
      2>> $LOG_DIR/converger.stderr.log \
      1> >(tee -a $LOG_DIR/converger.stdout.log | logger -t converger)

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: converger_ctl {start|stop}"

    ;;

esac
