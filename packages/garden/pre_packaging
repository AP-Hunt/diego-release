set -e

cd ${BUILD_DIR}/

export GOPATH=$PWD
export PATH=$GOPATH/bin:$PATH

mkdir -p $GOPATH/src/github.com/pivotal-cf-experimental
mv garden/ $GOPATH/src/github.com/pivotal-cf-experimental/garden/

cd $GOPATH/src/github.com/pivotal-cf-experimental/garden/
go get github.com/vito/gocart
gocart

# don't package gocart; avoid recursive symlink when tarring
rm -rf $GOPATH/src/github.com/vito/gocart