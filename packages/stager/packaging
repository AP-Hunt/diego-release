set -e

REPO_DIR=${BOSH_INSTALL_TARGET}/src/github.com/cloudfoundry-incubator/stager

mkdir -p $(dirname $REPO_DIR)

cp -a stager/ $REPO_DIR

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export GOPATH=$BOSH_INSTALL_TARGET:${REPO_DIR}/Godeps/_workspace
export PATH=$GOROOT/bin:$PATH

go install github.com/cloudfoundry-incubator/stager