set -e

REPO_NAME=github.com/cloudfoundry-incubator/docker-circus

REPO_DIR=$PWD/src/${REPO_NAME}

mkdir -p $(dirname $REPO_DIR)

cp -a $REPO_NAME $REPO_DIR

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export GOPATH=$PWD:${REPO_DIR}/Godeps/_workspace
export PATH=$GOROOT/bin:$PATH

go build ${REPO_NAME}/tailor
go build ${REPO_NAME}/soldier
go build ${REPO_NAME}/spy

tar -czf ${BOSH_INSTALL_TARGET}/docker-circus.tgz tailor soldier spy
